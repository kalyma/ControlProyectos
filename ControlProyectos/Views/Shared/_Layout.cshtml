<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Aplicacion Control de Proyectos </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color: #064236">
        <div class="container">
            <div class="navbar-header" style="width:100%;">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div style="float:left; width:80%;text-align:center">
                    @Html.ActionLink("TABLERO CONTROL DE PROYECTOS", "Index", "ControlProyecto", new { area = "" }, new { @class = "navbar-brand", Style = "color:#F9DA05;font-size:40px;font-family:auto;text-align:center;position:relative;top:30px;font-weight: bold;" });
                </div> 
                <div style="float:right; width:20%">
                    @*<label style="font-family:Arial; text-align:initial; font-size:larger; color:yellow;"></label>*@
                    <img src="~/Content/DataTables/images/LogoEcopetrol.jpg" alt="logo" width="250px">
                </div>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                   
                </ul>
            </div>
            
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year/@DateTime.Now.Month/@DateTime.Now.Day :- @DateTime.Now.TimeOfDay - swcolombia@gmail.com - frekal Derechos Reservados</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>