@model ControlProyectos.Class.Usuario

@{
    ViewBag.Title = "Login";
}

ViewBag.mensajeNoConexion

<h2>Nuevo</h2>

@if (ViewData["mensajeNoConexion"] != null)
{
    <div id="successMessage" style="color:red;font-size: large;">
        @ViewData["mensajeNoConexion"]
    </div>
}


<div class="container" style="color:green; font-size:large">


    <div class="row">
        <div class="form-group col-md-12">
            <br /><br /><br /><br /><br />
        </div>
    </div>

</div>



<div class="container" style="color:green; font-size:large;">
    @*border:5px solid yellow*@
    <div class="row">
        @*style="border:5px solid red"*@
        <div class="account-wall">
            @using (Html.BeginForm("validarLogin", "ControlProyecto", FormMethod.Post))
            {
                <div class="col-md-12" style="font-size:14px;text-align:right">
                    <div class="col-md-5">
                        @*style="border:5px solid black"@Html.AntiForgeryToken()*@

                        @Html.LabelFor(d => d.Id)
                    </div>
                    <div class="col-md-2">
                        @*border:5px solid black style="width:20%;"*@
                        @Html.TextBoxFor(d => d.Id, "", new { @class = "form-control" })
                        @Html.ValidationMessageFor(d => d.Id, null, new { @class = "alert danger red" })
                    </div>

                    <div class="col-md-5">
                        &nbsp;
                    </div>
                </div>

                <div class="col-md-12" style="font-size:14px;text-align:right">
                    @Html.AntiForgeryToken()
                    <div class="col-md-5">
                        @*style="border:5px solid black"*@
                        @Html.LabelFor(d => d.Contrasena)
                    </div>
                    <div class="col-md-2">
                        @*border:5px solid black style="width:20%;*@
                        @Html.PasswordFor(d => d.Contrasena, new { @class = "form-control" })
                        @Html.ValidationMessageFor(d => d.Contrasena, null, new { @class = "alert danger red" })
                    </div>

                    <div class="col-md-5">
                        &nbsp;
                    </div>

                    <div class="col-md-12" style="text-align:center">
                        @*border:5px solid blackwidth:50%;*@
                        <input type="submit" name="ingresar" value="INGRESAR" class="btn btn-success bg-success col-2" />
                        <!--</<br />formborder:1px solid black; btn-lg>style="color: white; width: 37%;text-align:centerbtn-block;-->
                    </div>
                </div>
            }
        </div>
    </div>
</div>




